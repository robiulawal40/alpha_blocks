{
	"name": "starter-block",
	"version": "0.1.0",
	"description": "Example block scaffolded with Create Block tool.",
	"author": "The WordPress Contributors",
	"license": "GPL-2.0-or-later",
	"main": "build/index.js",
	"scripts": {
		"build:old": "wp-scripts build",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
		"start:old": "wp-scripts start",
		"preview": "npm-run-all --parallel sync wpstart tailwindwatch",
		"sync": "browser-sync start -p 'http://localhost:8888/?page_id=2' --files '**/*.php' 'build/**/*.js' 'build/**/*.css'",
		"build": "npm-run-all --sequential buildwp tailwindbuild",
		"buildwp": "wp-scripts build ./src/info-box/index.js",
		"wpstart": "wp-scripts start ./src/info-box/index.js",
		"start": "npm-run-all --parallel wpstart tailwindwatch",
		"tailwindbuild": "tailwindcss -i ./src/info-box/style.scss -o ./build/info-box/style-index.css --postcss --minify",
		"tailwindwatch": "tailwindcss -i ./src/info-box/style.scss -o ./build/info-box/style-index.css --watch --postcss --minify",
		"git": "git add . && git commit -m \"regular update\" && git push origin main"
	},
	"devDependencies": {
		"@wordpress/scripts": "^26.9.0",
		"autoprefixer": "^10.4.14",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.27",
		"postcss-nested": "^6.0.1",
		"tailwindcss": "^3.3.3"
	}
}
