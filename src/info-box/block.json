{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "alpb/info-box",
	"version": "0.1.0",
	"title": "Info Box",
	"category": "widgets",
	"icon": "smiley",
	"description": "The Info Box will create.....",

	"attributes": {
		"contents": {
			"type": "string",
			"source": "html",
			"selector": ".text-content"
		},
		"title": {
			"type": "string",
			"selector": "h1",
			"default": "Info Title"
		},
		"titleClass": {
			"type": "string",
			"default": "pb-4 text-2xl font-semibold text-center"
		},
		"list": {
			"type": "array"
		},
		"content": {
			"type": "string",
			"source": "html",
			"selector": "p"
		},
		"alpha_info_box_link": {
			"type": "string",
			"default": "#"
		},
		"alpha_info_link": {
			"type": "object"
		},
		"alignment": {
			"type": "string",
			"default": "none"
		},
		"bg_color": { "type": "string", "default": "#000000" },
		"text_color": { "type": "string", "default": "#ffffff" }
	},
	"supports": {
		"html": false,
		"align": [ "left", "right", "full" ]
	},
	"textdomain": "alpha-blocks",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js"
}
